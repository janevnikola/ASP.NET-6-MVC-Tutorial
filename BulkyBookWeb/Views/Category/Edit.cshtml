@model Category
@{
    ViewData["Title"] = "Edit";
}

<h1>Create</h1>

<form method="post" asp-action="Edit">
    <h2>Edit a category</h2>
    
        <label asp-for="Name">Name</label>
        <input asp-for="Name" style="padding: 5px; border: 1px solid #ccc; border-radius: 4px; width: 100%;" />
        <span asp-validation-for="Name" style="color: red"></span>
        <br />
        
        <!--display order-->
        <label asp-for="DisplayOrder">Display order</label>
    <input asp-for="DisplayOrder" style="padding: 5px; border: 1px solid #ccc; border-radius: 4px; width: 100%;" />
    <span asp-validation-for="DisplayOrder" style="color: red"></span>
    <br />

    <br />
    <button type="submit">Update</button>
    <a asp-controller="Category" asp-action="Index">Back to list</a>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}